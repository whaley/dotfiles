#!/usr/bin/env sh

# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# see this wiki page for information:
#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition
#
# yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
# sudo yabai --load-sa

###############################################################################
# Global Settings
###############################################################################
window_gap=50
janky_border_width=$(($window_gap*2))
yabai -m config                                     \
    mouse_follows_focus          on                 \
    focus_follows_mouse          off                \
    window_origin_display        default            \
    window_placement             second_child       \
    window_zoom_persist          on                 \
    window_shadow                on                 \
    window_animation_duration    1.0                \
    window_opacity_duration      0.0                \
    active_window_opacity        1.0                \
    normal_window_opacity        0.90               \
    window_opacity               on                 \
    insert_feedback_color        0xffd75f5f         \
    split_ratio                  0.5                \
    split_type                   auto               \
    auto_balance                 off                \
    top_padding                  ${window_gap}      \
    bottom_padding               ${window_gap}      \
    left_padding                 ${window_gap}      \
    right_padding                ${window_gap}      \
    window_gap                   ${window_gap}      \
    layout                       bsp                \
    mouse_modifier               cmd                \
    mouse_action1                resize             \
    mouse_drop_action            swap


###############################################################################
# Rules and Signals
###############################################################################

##########
# Switch focus to first window after minimizing or destroying
##########
# TODO: Delete all rules in effect so this effectively wipes the config clean

##########
# Switch focus to first window after minimizing or destroying
##########
yabai -m signal --add event="window_destroyed"  app=".*"  action="yabai -m window --focus recent"
yabai -m signal --add event="window_minimized"  app=".*"  action="yabai -m window --focus recent"

##########
# Make certain apps unmanaged/floating.  Add app name to the unmanaged_apps array
##########
unmanaged_apps=(
    "Calculator"
    "Cisco Secure Client"
    "DI.FM"
    "Finder"
    "Managed Software Center"
    "Music"
    "Spotify"
    "Stickies"
    "System Settings"
    "Time Out"
)

make_app_unmanaged() {
  app="${1}"
  label="unmanage_${app}"
  yabai -m rule   --add app="${app}" manage="off" label="${label}"
  yabai -m signal --add app="${app}" event="window_created"  action="yabai -m rule --apply ${label}"
  yabai -m signal --add app="${app}" event="window_focused"  action="yabai -m rule --apply ${label}"
}

for app in "${unmanaged_apps[@]}"; do
    make_app_unmanaged $app
done


###############################################################################
# Janky Borders
###############################################################################
borders active_color=0xffe149a7  width="${janky_border_width}" hidpi=on &
